{{> layout/header}}

<div class="frame">
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <a class="nav-link title text-center fs-2" href="/userInformation">회원정보보기</a>
                <div class="card">
                    <div class="user-image">
                        <img class="user-image-box" src="../images/basic.png" alt="">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-warning text-center pic-update-button">사진수정</button>
                    </div>
                    <hr />
                    <div>
                        <a class="nav-link link" href="/myResumeList">이력서 관리</a>
                        <a class="nav-link link" href="/userApplyStatus/{{user.id}}">지원현황</a>
                        <a class="nav-link link" href="/userScrapCompany">관심기업</a>
                        <hr />
                        <a class="nav-link link" href="/userUpdate">개인정보 수정</a>
                        <a class="nav-link link" href="/logout">로그아웃</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9 box">
                <div class="d-flex pe-3 my-3">
                    <div class="small-title">지원 현황</div>
                </div>
                <hr />
                <div class="apply-card">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h5>총지원</h5>
                            <div>{{apply}}개</div>
                        </div>
                        <div class="col-md-4 loading">
                            <h5>대기중</h5>
                            <div>0개</div>
                        </div>
                        <div class="col-md-4">
                            <h5>결과발표</h5>
                            <div>0개</div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="d-flex pe-3 my-3">
                    <div class="small-title">나의 이력서</div>
                </div>
                <div class="d-flex text-center info-card">
                    <div class="card">
                        <h5>대표이력서</h5>
                        <div>열정적인 웹 개발자</div>
                    </div>
                    <div class="card">
                        <h5>총 이력서</h5>
                        <div>{{resume}}개</div>
                    </div>
                </div>
                <hr />
                <div class="d-flex pe-3 my-3">
                    <div class="small-title">관심 카테고리</div>
                </div>
                <div class="interest_category">
                    <div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">서버 개발자</label>
                        </div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">백엔드 개발자</label>
                        </div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">프론트엔드 개발자</label>
                        </div>
                    </div>
                    <div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">안드로이드 개발자</label>
                        </div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">ios 개발자</label>
                        </div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">풀스택 개발자</label>
                        </div>
                    </div>
                    <div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">빅데이터 엔지니어</label>
                        </div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">임베디드 개발자</label>
                        </div>
                        <div class="form-check custom-form-checkbox">
                            <input class="form-check-input custom-checkbox" type="checkbox" id="check1" name="option1"
                                value="something">
                            <label class="form-check-label">Devops 개발자</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="small-title mt-3">추천 공고</div>
        <hr />
        <div class="recommand-notice">
            {{#notices}}
            <a class="card recommand-recruit" href="/noticeDetail/{{id}}">
                <div class="card-body home d-flex justify-content-center">
                    <img class="recruit-image-box" src="../images/company.jpg" alt="공고 사진">
                </div>
                <h4 class="text-center">{{title}}</h4>
                <div class="text-center">{{companyName}}</div>
            </a>
            {{/notices}}
        </div>
    </div>

    {{> layout/footer}}