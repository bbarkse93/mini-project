{{> layout/header}}

<div class="frame">
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <a class="nav-link title text-center fs-2" href="/userInformation/{{user.id}}">회원정보보기</a>
                <div class="card">
                    <div class="user-image">
                        <img class="user-image-box" src="../images/basic.png" alt="">
                    </div>

                    <hr />
                    <div>
                        <a class="nav-link link" href="/myResumeList/{{user.id}}">이력서 관리</a>
                        <a class="nav-link link" href="/userApplyStatus/{{user.id}}">지원현황</a>
                        <a class="nav-link link" href="/userScrapCompany/{{user.id}}">관심기업</a>

                        <hr />
                        <a class="nav-link link" href="/userUpdateForm/{{user.id}}">개인정보 수정</a>
                        <a class="nav-link link" href="/logout">로그아웃</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="d-flex pe-3 my-3">
                    <div class="small-title">관심 기업</div>
                </div>
                <div class="list-group">
                    {{#scraps}}
                    <div class="mb-3 resume-card">
                        <a href="/notice/noticeDetail/{{notice.id}}" class="">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-2">
                                        {{notice.title}}
                                    </h4>
                                    <h6 class="mb-2">
                                        {{notice.companyName}}
                                    </h6>
                                </div>
                                <div class="mb-1 d-flex align-items-center">
                                    <form action="/apply/{{id}}" enctype="application/x-www-form-urlencoded">
                                        <button type="submit" class="btn btn-info apply-button">지원하기</button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/scraps}}
                </div>
            </div>
        </div>
        <div class="small-title mt-3">추천 공고</div>
        <hr />
        <div class="recommand-notice">
            {{#notices}}
            <a class="card recommand-recruit" href="/noticeDetail/{{id}}">
                <div class="card-body home d-flex justify-content-center">
                    <img class="recruit-image-box" src="../images/company.jpg" alt="공고 사진">
                </div>
                <h4 class="text-center">{{title}}</h4>
                <div class="text-center">{{companyName}}</div>
            </a>
            {{/notices}}
        </div>
    </div>
</div>
{{> layout/footer}}