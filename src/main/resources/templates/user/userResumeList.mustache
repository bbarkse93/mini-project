{{> layout/header}}

<div class="frame">
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <a class="nav-link title text-center fs-2" href="/userInformation">회원정보보기</a>
                <div class="card">
                    <div class="user-image">
                        <img class="user-image-box" src="../images/basic.png" alt="">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-warning text-center" style="width: 100px;">사진수정</button>
                    </div>
                    <hr />
                    <div>
                        <a class="nav-link link" href="/myResumeList">이력서 관리</a>
                        <a class="nav-link link" href="/userApplyStatus/{userId}">지원현황</a>
                        <a class="nav-link link" href="/userScrapCompany">관심기업</a>
s
                        <hr />
                        <a class="nav-link link" href="#">개인정보 수정</a>
                        <a class="nav-link link" href="#">로그아웃</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="d-flex flex-row-reverse justify-content-between pe-3 my-3">
                    <button type="button" class="btn add-btn btn-primary">등록</button>
                    <div class="small-title">이력서 관리</div>
                </div>
                <hr />
                {{#resumeList}} <!-- 이력서 목록 반복문 시작 -->
                <div class="mb-3">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between">
                            <h4 class="mb-2">
                                {{title}} <!-- 이력서 제목 표시 -->
                            </h4>
                            <div>
                                <div class="mb-1">
                                    <a class="btn btn-warning me-1" href="/resume/{{id}}/updateForm">수정</a>
                                </div>
                                <form action="/resume/{{id}}/delete" method="post">
                                    <button type="submit" class="btn btn-danger">삭제</button>
                                </form>
                            </div>
                        </div>
                    </a>
                </div>
                {{/resumeList}} <!-- 이력서 목록 반복문 종료 -->
                <div class="small-title mt-3">추천 공고</div>
                <hr />
                <div class="d-flex justify-content-around">
                    {{#notices}}
                    <a class="card recommand-recruit" href="/noticeDetail">
                        <div class="card-body home d-flex justify-content-center">
                            <img class="recruit-image-box" src="../images/company.jpg" alt="공고 사진">
                        </div>
                        <h4 class="text-center">{{title}}</h4>
                        <div class="text-center">{{companyName}}</div>
                    </a>
                    {{/notices}}
                </div>

                {{> layout/footer}}