{{> layout/header}}

<div class="frame">
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <a class="nav-link title text-center fs-2" href="userInformation.html">회원정보보기</a>
                <div class="card">
                    <div class="user_image">
                        <img class="user_image_box" src="../images/basic.png" alt="기본이미지">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-warning text-center" style="width: 100px;">사진수정</button>
                    </div>
                    <hr />
                    <div>

                        <hr />
                        <a class="nav-link link" href="#">개인정보 수정</a>
                        <a class="nav-link link" href="#">로그아웃</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between pe-3 my-3">
                    <div class="small_title">지원 현황</div>
                </div>
                <hr />
                <div class="list-group">
                    
                    <div class="mb-3">
                      {{#individual}}
                         <div class="mb-3">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <div>
                        <h4 class="mb-2">{{notice.title}}</h4>
                        <h6 class="mb-2">{{notice.companyName}}</h6>
                    </div>
                    <div>
                        <div class="mb-1">
                            <button type="button" class="btn btn-primary">합격</button>
                        </div>
                        <div>
                            <button type="button" class="btn btn-danger btn">취소</button>
                        </div>
                    </div>
                </div>
            </a>
        </div>
           {{/individual}}
        </div>
    <div class="small_title mt-3">추천 공고</div>
<hr />
<div class="d-flex justify-content-around">
    {{#notices}}
    <a class="card recommand_recruit" href="recruitDetail.html">
        <div class="card-body home d-flex justify-content-center">
            <img class="recruit_image_box" src="../images/company.jpg" alt="공고 사진">
        </div>
        <h4 class="text-center">{{title}}</h4>
        <div class="text-center">{{companyName}}</div>
    </a>
    {{/notices}}
</div>

</div>

{{> layout/footer}}