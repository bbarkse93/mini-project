{{> layout/header}}
<style>
  .profile-img {
    width: 250px;
    height: 225px;
    border-radius: 10px;
  }
</style>

<div class="frame">
  <h1>이력서 상세보기</h1>


  <h4 class="my-4">이력서 제목</h4>
  <div class="card2">
    {{resume.title}}
  </div>


  <!-- 이미지 파일 삽입, 이미지 파일과 이름, 이메일, 전화번호 나란히 정렬 -->
  <div class="container-fluid d-flex">
    <div class="profile-image" style="margin-top: 20px; margin-right: 20px">
      <img id="preview" class="profile-img" src=" /images/{{resume.personalPicUrl}}">
    </div>
    <div class="info2">
      <h4 class="mt-3">이름</h4>
      <div class="card2">
        {{resume.personalName}}
      </div>
      <h4 class="mt-3">이메일</h4>

      <div class="card2">
        {{resume.personalEmail}}
      </div>
      <h4 class="mt-3">전화번호</h4>
      <div class="card2">
        {{resume.phoneNumber}}
      </div>
    </div>
  </div>
  <br>
  <hr />

  <h4 class="mt-4">희망 직무</h4>
  <div class="card2">
    {{#resume.wishDutys}}
    {{duty.dutyName}},
    {{/resume.wishDutys}}
  </div>


  <h4 class="mt-4">기술 스택</h4>
  <div class="card2">
    {{#resume.wishSkills}}
    {{skill.skillName}}
    {{/resume.wishSkills}}
  </div>

  <hr />
  <h4 class="mt-4">자기소개서</h4>
  <div class="card2">
    {{resume.coverLetter}}
  </div>

  <h4 class="mt-4">학력</h4>
  <div class="card2">
    {{resume.edu}}
  </div>
    <br>
  <br>
  <br>
  <br>
 
 <div class="text-center">
  <form action="/apply/{{id}}/update" method="POST" enctype="application/x-www-form-urlencoded" style="display: inline-block;">
    <button type="submit" class="btn btn-primary"  id="approveButton" name="status" value="true">
      합격
    </button>
  </form>
  
  <form action="/apply/{{id}}/update" method="POST" enctype="application/x-www-form-urlencoded" style="display: inline-block;">
    <button type="submit" class="btn btn-danger"  id="saveButton" name="status" value="false">
      불합격
    </button>
  </form>
</div>

</div>


{{> layout/footer}}